<Window x:Class="pills_reminder.DrugInfo"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        Title="DrugInfo" Height="300" Width="300">
    <Grid>
        <TextBlock Name="cutTime" HorizontalAlignment="Left" Margin="100,79,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top"/>

        <TextBlock HorizontalAlignment="Left" Margin="100,113,0,0" TextWrapping="Wrap" Text="{Binding DrugName}" VerticalAlignment="Top"/>
        <TextBlock HorizontalAlignment="Left" Margin="100,148,0,0" TextWrapping="Wrap" Text="{Binding Dose}" VerticalAlignment="Top"/>
        <TextBlock HorizontalAlignment="Left" Margin="100,162,0,0" TextWrapping="Wrap" Text="{Binding AddInf}" VerticalAlignment="Top"/>

    </Grid>
</Window>
